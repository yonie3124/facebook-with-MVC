

<%- include("./components/header") %>

<form method="POST" action="/feed">
    <div class="form-group">
      <label for="exampleInputEmail1">Name</label>
      <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Name" required>
      <% if (err && err.name ) {%>
      <small id="err" class="form-text text-muted">
        <%= err['name'].message %></small>
        <% } %>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Message</label>
      <input  type="text" name="message" class="form-control" id="exampleInputPassword1" placeholder="message" required>
      <% if (err && err.message) {%>
        <small id="err" class="form-text text-muted ">
          <%= err['message'].message %></small>
          <% } %>
    </div>
    <button type="submit" class="btn btn-primary">Add Your Message</button>
  </form>


    <% if (result.length > 0) { %>
        <% result.forEach(element => { %>    
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= element.name %></h5>
                 <p class="card-text"><%= element.message%> - created date</p>
                 <h5 class="card-title"> <a href=/feed/<%= element._id %> > see more </p></a></h5>
                 <h5 class="card-title"><%= element.created_at %></h5>
                 
                </div>
              </div>
        <%});%>
<%} else {%>
    there is no record
<% } %>



